#include <iostream>
using namespace std;

class CreditCard{
	public:
	int Number;
	float Balance;
	CreditCard(int N, float B){
	Number = N;
	Balance = B;
	}	
	CreditCard operator+ (CreditCard &C2){
	C2.Balance +=  this->Balance;
	this->Balance = 0;
	return *this;
}
};

int main() {
    CreditCard C1(7896, 200);
    CreditCard C2(1252, 50);
    C1 = C1 + C2; 
    cout << C1.Balance << " : " << C2.Balance << endl;
    C2 = C2 + C1;
    cout << C1.Balance << " : " << C2.Balance;
	return 0;
}
